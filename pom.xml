    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <wicket.version>6.12.0</wicket.version>
        <wicketstuff.version>6.11.0</wicketstuff.version>
        <jboss.maven.plugin.version>7.3.Final</jboss.maven.plugin.version>
        <jboss.maven.plugin.mgmt.host>localhost</jboss.maven.plugin.mgmt.host>
        <jboss.maven.plugin.mgmt.port>9999</jboss.maven.plugin.mgmt.port>

        <!-- these dependencies provided by jboss AS, to update them
        check jboss modules! -->
