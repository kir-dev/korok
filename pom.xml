            <!-- Wicket Java EE integration. -->
            <!-- Wicket-CDI depends on seam-conversation module to activate and
            deactivate conversational contexts, so you will need a seam-conversation module
            specific to your CDI container. For JBoss Weld: -->
            <dependency>
                <groupId>org.jboss.seam.conversation</groupId>
                <artifactId>seam-conversation-weld</artifactId>
                <version>3.0.0.Final</version>
            </dependency>
            <dependency>
                <groupId>org.apache.wicket</groupId>
                <artifactId>wicket-cdi</artifactId>
                <version>${wicket.version}</version>
            </dependency>

