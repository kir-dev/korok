        <module>sch-pek-web-services</module>
        <module>sch-pek-ear</module>
        <module>sch-pek-util</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>hu.sch</groupId>
                <artifactId>sch-pek-domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>hu.sch</groupId>
                <artifactId>sch-pek-ear</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>hu.sch</groupId>
