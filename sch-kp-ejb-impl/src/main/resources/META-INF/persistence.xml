<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="SCHKP-PU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/schteszt</jta-data-source>
    <!-- ez fontos, mert a kulon .jar csomag miatt nem talalja meg magatol -->
    <class>hu.sch.domain.BelepoIgeny</class>
    <class>hu.sch.domain.BelepoTipus</class>
    <class>hu.sch.domain.Csoport</class>
    <class>hu.sch.domain.CsoportStatusz</class>
    <class>hu.sch.domain.Csoporttagsag</class>
    <class>hu.sch.domain.Ertekeles</class>
    <class>hu.sch.domain.ErtekelesStatisztika</class>
    <class>hu.sch.domain.ErtekelesStatusz</class>
    <class>hu.sch.domain.ErtekelesUzenet</class>
    <class>hu.sch.domain.Felhasznalo</class>
    <class>hu.sch.domain.PontIgeny</class>
    <class>hu.sch.domain.SystemAttribute</class>
    <class>hu.sch.domain.Szemeszter</class>

    <properties>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.bytecode.use_reflection_optimizer" value="true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>
      <property name="hibernate.cache.use_query_cache" value="true"/>
      <!--property name="hibernate.hbm2ddl.auto" value="validate"/-->
    </properties>
  </persistence-unit>
</persistence>
